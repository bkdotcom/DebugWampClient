{
  "name": "PHPDebugConsole",
  "version": "3.0.0",
  "description": "Build CSS & Javascript for PHPDebugConsole",
  "main": "index.js",
  "scripts": {
    "comment:build:scss": "node-sass-chokidar --output-style compact scss/ --output scss/css",
    "build": "npx npm-run-all --parallel build:*",
    "build:js": "npx rollup -c",
    "_build:css": "scss -t compact --sourcemap=none scss/Debug.scss css/Debug.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npx npm-run-all --parallel watch:*",
    "watch:js": "NODE_ENV=watch npx nodemon --watch js_src/ --ext js --exec \"npm run build:js\"",
    "_watch:scss": "npx nodemon --watch scss/ --ext scss --exec \"npm run build:css\""
  },
  "keywords": [
    "PHP",
    "Debug"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "autobahn-browser": "^18.10.2",
    "base64-arraybuffer": "^0.1.5",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.4.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-legacy": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.2"
  }
}
